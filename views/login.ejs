<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List Login</title>
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,400;0,700;1,400&display=swap"
        rel="stylesheet">
    <!-- icons -->
    <script src="https://kit.fontawesome.com/adb87a038e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el=> { %>
            <div class="alert alert-danger">
                <%= el.msg %>
            </div>
            <% }) %>
                <% } %>
                    <% if (locals.messages.info) { %>
                        <% messages.info.forEach( el=> { %>
                            <div class="alert alert-danger">
                                <%= el.msg %>
                            </div>
                            <% }) %>
                                <% } %>

                                    <div class="main">
                                        <h1 class="sign" align="center">Please Sign in</h1>
                                        <form action="/login" method="POST" class="form1">
                                            <input class="un " type="email" name="email" align="center"
                                                placeholder="Email">
                                            <input class="un" type="password" name="password" align="center"
                                                placeholder="Password">
                                            <button class="submit" type="submit" align="center">Log In</button>

                                            <h2><a href="/"><i class="fa-solid fa-house" align="center"></i></a></h2>

                                    </div>



</body>

</html>